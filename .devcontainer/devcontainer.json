//devcontainer.json
{"name": "nn-zero-to-hero", 
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.8",
  // pip install needed python packages on creation
  "postCreateCommand": "pip install -r /workspaces/nn-zero-to-hero/requirement.txt",
  "mounts": [
    // Mount the local .ssh directory so you can use SSH key-based authentication.
    "source=${localEnv:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
    // Mount the local .gitconfig file so you can configure Git user settings.
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
    ],
    "customizations": 
      {
      "vscode": 
        {
        "extensions": 
        [
			"ms-vsliveshare.vsliveshare",
			"VisualStudioExptTeam.intellicode-api-usage-examples",
			"VisualStudioExptTeam.vscodeintellicode-completions",
			"VisualStudioExptTeam.vscodeintellicode-insiders",
			"ms-vscode-remote.remote-ssh",
			"ms-vscode-remote.remote-containers",
			"ms-python.python",
			"ms-python.vscode-pylance",
			"ms-python.black-formatter",
			"esbenp.prettier-vscode",
			"streetsidesoftware.code-spell-checker",
			"yzhang.markdown-all-in-one",
			"aaron-bond.better-comments",
			"njpwerner.autodocstring",
			"eamodio.gitlens",
			"GitHub.copilot",
			"GitHub.copilot-chat",
			"GitHub.copilot-labs",
			"ms-toolsai.datawrangler",
			"ms-toolsai.jupyter-renderers",
			"ms-toolsai.jupyter",
			"ms-toolsai.vscode-jupyter-cell-tags",
			"ms-toolsai.vscode-jupyter-slideshow",
			"ms-toolsai.jupyter-keymap",
			"GitHub.codespaces"
		]
			  }
      },
  // Features to add to the dev container. More info: https://containers.dev/features.
